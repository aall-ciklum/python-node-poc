{
  "name": "my-app-name",
  "version": "1.0.0",
  "description": "Electron wrapper for React UI",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "package:mac": "electron-builder build --mac",
    "package:win": "electron-builder build --win",
    "package:linux": "electron-builder build --linux",
    "package:all": "electron-builder build --win --mac --linux",
    "make": "npm run build && electron-builder build",
    "build:mac": "cd ../react-ui && npm run build:electron:mac && cd ../electron && npm run package:mac",
    "build:win": "cd ../react-ui && npm run build:electron:win && cd ../electron && npm run package:win",
    "build:linux": "cd ../react-ui && npm run build:electron:linux && cd ../electron && npm run package:linux",
    "build:all": "cd ../react-ui && npm run build:electron:all && cd ../electron && npm run package:all"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.0.0"
  },
  "build": {
    "appId": "com.your.app",
    "productName": "ToDo",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ToDo"
    }
  }
}
