{
  "name": "my-app-name",
  "version": "1.0.0",
  "description": "Electron wrapper for React UI",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "package": "electron-builder build --win --mac --linux",
    "make": "npm run build && electron-builder build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.0.0"
  },
  "build": {
    "appId": "com.your.app",
    "productName": "ToDo",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
